#: import Window kivy.core.window.Window
#: import bg_colors app_files.templates.bg_colors
#: import text_colors app_files.templates.text_colors
<Card@MDCard>:
    md_bg_color:bg_colors["bg_one"]
<TCard@Card>:
    size_hint_y:None
    padding:dp(5)
<Btn@MDFillRoundFlatButton>:
    md_bg_color:bg_colors["bg_one"]
<IBtn@MDIconButton>:
    theme_icon_color:"Custom"
<ITBtn@MDFillRoundFlatIconButton>:
    theme_text_color:"Custom"
    theme_icon_color:"Custom"
<Lb@MDLabel>:
    markup:True
    adaptive_height:True
    theme_text_color:"Custom"

<TaskCard>:
    orientation: 'vertical'
    size_hint_y:None
    height:dp(180)
    padding:dp(5)
    MDRelativeLayout:
        id:c_progress
        size_hint: None,None
        size:Window.width,dp(20)
        Lb:
            text:"%"
            text_color:text_colors["txt_two"]
    MDGridLayout:
        cols:2
        rows:1
        MDRelativeLayout:
            Lb:
                text:"[b]Task Category"
                pos_hint:{"center_y":.5}
                font_size:sp(15)
                text_color:bg_colors["bg_one"]
            Lb:
                text:"[b]No of tasks for this category"
                font_size:sp(13)
                text_color:bg_colors["bg_one"]
        MDRelativeLayout:
            Btn:
                text:"completed"
            Btn:
                text:"Left"
                pos_hint:{"right":1}
    MDRelativeLayout:
        IBtn:
            icon:"dots-horizontal"
            pos_hint:{"right":1}
            md_bg_color:bg_colors["bg_two"]
            icon_size:sp(20)