#: import bg_colors app_files.templates.bg_colors
#: import text_colors app_files.templates.text_colors

<HomeScreen>:
    md_bg_color:bg_colors["bg_two"]
    MDGridLayout:
        cols:1
        padding:dp(7)
        MDRelativeLayout:
            size_hint_y:None
            height:dp(50)
            Lb:
                text:"Welcome, [b]@Clean_Code[/b]"
                pos_hint:{"center_y":.5}
                text_color:text_colors["txt_two"]
        Card:
            size_hint_y:None
            height:dp(200)
            padding:dp(5)
            orientation: 'vertical'
            MDBoxLayout:
                MDRelativeLayout:
                    Lb:
                        text:"[b]Your Progress"
                        text_color:text_colors["txt_three"]
                        font_size:sp(30)
                        pos_hint:{"center_y":.5}
                    Lb:
                        text:"Your actual progress"
                        text_color:text_colors["txt_three"]
                MDRelativeLayout:
                    size_hint_x:.3
                    Image:
                        source:"assets/rocket.png"
            MDRelativeLayout:
                size_hint:None,None
                size:Window.width-dp(30),dp(20)
                id:progress

    MDScrollView:
        size_hint_y:None
        height:Window.height-dp(270)
        MDGridLayout:
            id:grid_task
            size_hint_y:None
            height:dp(940)
            rows:5
            cols:1
            padding:dp(7)
            spacing: dp(7)
    MDRelativeLayout:
        IBtn:
            icon:"plus-thick"
            md_bg_color:bg_colors["bg_one"]
            icon_color:text_colors["txt_two"]
            pos_hint:{"center_x":.5,"top":.06}


<CreateTask>:
    MDGridLayout:
        cols:1
        padding:dp(7)
        MDBoxLayout:
            size_hint_y:None
            height:dp(50)
            IBtn:
                icon:"chevron-left"
                md_bg_color:bg_colors["bg_one"]
                icon_color:text_colors["txt_three"]
        MDScrollView:
            MDList:
                spacing:dp(5)
                TCard:
                    height:dp(200)
                    Lb:
                        text:"Title"
                        text_color:bg_colors["bg_two"]
                    CTextField:
                    Lb:
                        text:"Description"
                        text_color:bg_colors["bg_two"]
                    CTextField:
                TCard:
                    height:dp(330)
                    spacing:dp(15)
                    Lb:
                        text:"Date/Time Details"
                        text_color:bg_colors["bg_two"]
                    MDBoxLayout:
                        size_hint_y:None
                        height:dp(50)
                        MDRelativeLayout:
                            CItBtn:
                                icon:"plus"
                                text:"Start Date"
                                pos_hint:{"center_y":.5}
                        MDRelativeLayout:
                            Lb:
                                font_size:sp(12)
                                text:"Today"
                                pos_hint:{"center_y":.5}
                                text_color:bg_colors["bg_two"]
                            MDCheckbox: 
                                size_hint:None,None
                                size:dp(30),dp(30)
                                pos_hint:{"right":1,"center_y":.5}
                                checkbox_icon_normal:"checkbox-marked-circle-outline"
                                checkbox_icon_down:"checkbox-marked-circle-outline"
                    Lb:
                        font_size:sp(12)
                        text:"Start date"
                        text_color:bg_colors["bg_two"]
                    CItBtn: 
                        icon:"plus"
                        text:"Start Time"
                    Lb:
                        font_size:sp(12)
                        text:"Start time"
                        text_color:bg_colors["bg_two"]
                    CItBtn:
                        icon:"plus"
                        text:"End time"
                    Lb:
                        font_size:sp(12)
                        text:"End time"
                        text_color:bg_colors["bg_two"]
                TCard:
                    height:dp(100)
                    orientation: 'horizontal'
                    CItBtn:
                        icon:"chevron-right"
                        text:"Personal"
                        pos_hint:{"center_y":.5}
                
        MDRelativeLayout:
            size_hint_y:None
            height:dp(50)
            ITBtn:
                icon:"timer-plus-outline"
                text:"Save task"
                md_bg_color:bg_colors["bg_one"]
                pos_hint:{"right":1}